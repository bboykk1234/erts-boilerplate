{
  "name": "erts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build:main": "webpack --color --config ./configs/webpack.config.main.ts",
    "build:renderer": "webpack --color --config ./configs/webpack.config.renderer.ts",
    "server": "webpack serve --color --config ./configs/webpack.config.renderer.ts",
    "build": "yarn run build:renderer && yarn run build:main",
    "style:dev": "tsm -w ./sources/index.scss",
    "start": "yarn run build && yarn run electron",
    "start:dev": "yarn run build:main && concurrently -k \"yarn run server\" \"yarn run electron\"",
    "electron": "electron --no-sandbox ./app"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bboykk1234/erts-boilerplate.git"
  },
  "keywords": [
    "electron",
    "typescript",
    "react"
  ],
  "author": "David Tan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bboykk1234/erts-boilerplate/issues"
  },
  "homepage": "https://github.com/bboykk1234/erts-boilerplate#readme",
  "devDependencies": {
