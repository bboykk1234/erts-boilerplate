{
    "compilerOptions": {
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "Components/*": ["sources/components/*"],
        }
    },
    "include": [
        "sources/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}